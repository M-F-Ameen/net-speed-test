{
  "name": "electron-react-vite-app",
  "version": "0.1.0",
  "description": "Simple Electron desktop app using React + Vite",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite --config vite.config.mjs",
    "dev:main": "cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer",
    "build:renderer": "vite build --config vite.config.mjs",
    "start": "electron .",
    "lint": "echo \"No lint configured\""
  },
  "build": {
    "appId": "com.example.electronreactvite",
    "files": [
      "src/main/**",
      "src/preload/**",
      "dist/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": true,
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron": "^30.0.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "vite": "^5.1.4",
    "wait-on": "^7.0.1"
  }
}
